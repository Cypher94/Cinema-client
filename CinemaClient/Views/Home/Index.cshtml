@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CinemaClient.Models.Movie>

<head>
    <link rel="stylesheet" type="text/css" href="~/slick/slick.css" />
    <link href="~/css/moviesList.css" rel="stylesheet" />
</head>

<body>

    <section class="heroCarousel">
        @foreach (var movie in Model)
        {
            @if (movie.HeroCarousel)
            {
                <div class="heroCarousel-item">
                    <div class="heroCarousel-item-cover"></div>
                    <div class="heroCarousel-item-details">
                        <h1 class="heroCarousel-item-detailsTitle">@movie.Name</h1>
                        <h4 class="heroCarousel-item-detailsTags">
                            @foreach (var tag in movie.Tags)
                            {
                                <span>@tag |</span>
                            }
                            <span>@movie.Duration</span>
                        </h4>
                        <!--TODO add buy ticket link-->
                        <a href="#" class="heroCarousel-item-detailsBuyTicket">Buy ticket</a>
                    </div>
                    <img src="@movie.CarouselImageUrl" class="heroCarousel-item-image" />
                </div>
            }
        }
    </section>

    <section class="moviesList">
        @foreach (var movie in Model)
        {
            <div class="moviesList-item">
                <img src="@movie.MiniatureImageUrl" class="moviesList-item-miniature" />
                <h2 class="moviesList-item-title">@movie.Name</h2>
                <p class="moviesList-item-description">@movie.Description</p>
                <h6 class="moviesList-item-tags">
                    @foreach (var tag in movie.Tags)
                    {
                        <span>@tag |</span>
                    }
                    <span>@movie.Duration</span>
                </h6>
                <h2 class="moviesList-item-rating">Rating: @movie.Rating</h2>
            </div>
        }
    </section>


    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="~/slick/slick.min.js"></script>
    <script src="~/slick/slick-init.js"></script>

</body>
